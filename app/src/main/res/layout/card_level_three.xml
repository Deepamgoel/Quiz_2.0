<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.example.deepamgoel.quiz20.level_one.LevelOneActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/level_three_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/eight_dp"
        app:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/level_three_question"
                style="@style/TextFormattingQuestion"
                tools:text="@string/que1" />

            <ImageView
                android:id="@+id/level_three_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/level_three_question"
                android:layout_margin="@dimen/eight_dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/level_three_image"
                android:maxHeight="400dp"
                android:padding="@dimen/eight_dp"
                android:scaleType="fitXY" />

            <EditText
                android:id="@+id/level_three_answer"
                style="@style/TextFormattingAnswer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/level_three_image"
                android:hint="@string/answer"
                android:inputType="textCapWords" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>