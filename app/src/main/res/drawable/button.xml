<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <stroke android:width="@dimen/four_dp" android:color="@android:color/black" />
            <corners android:radius="@dimen/forty_eight_dp" />
            <solid android:color="@android:color/white" />
            <padding android:bottom="@dimen/sixteen_dp" android:left="@dimen/sixteen_dp" android:right="@dimen/sixteen_dp" android:top="@dimen/sixteen_dp" />

        </shape>
    </item>

    <item android:state_enabled="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <stroke android:width="@dimen/four_dp" android:color="@android:color/black" />
            <corners android:radius="@dimen/forty_eight_dp" />
            <solid android:color="@color/dark_gray" />
            <padding android:bottom="@dimen/sixteen_dp" android:left="@dimen/sixteen_dp" android:right="@dimen/sixteen_dp" android:top="@dimen/sixteen_dp" />

        </shape>
    </item>

    <!-- default state-->

    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <stroke android:width="@dimen/four_dp" android:color="@android:color/black" />
            <corners android:radius="@dimen/forty_eight_dp" />
            <padding android:bottom="@dimen/sixteen_dp" android:left="@dimen/sixteen_dp" android:right="@dimen/sixteen_dp" android:top="@dimen/sixteen_dp" />

        </shape>
    </item>
</selector>

